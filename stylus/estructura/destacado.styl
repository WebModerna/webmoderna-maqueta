 // highlight Styles
.slider__listado-imagenes
	height 100%
	margin 0
	overflow hidden
	position relative
	// text-align left
	width 100%

	img
		// border none 
		// border-radius( 0 0 4px 4px)
		// height 100%
		left 0
		opacity 0
		position absolute
		top 0
		width 100%

.slider__listado-imagenes__navegacion
	bottom 0
	display table
	position absolute 
	// text-align center
	// top 10%
	// width 100%
	z-index 6 

	p
		display inline-block
		margin 0
		padding 0
		transition(all 0.8s ease-in-out)

		a
			border 1em solid blanco
			border-radius(50%)
			// background blanco
			display block
			height 0
			margin 0.5em
			opacity 0.5
			// padding 5px
			text-decoration none
			transition(all 0.5s ease-in-out)
			// vertical-align top
			width 0
			
			span
				display none
	
	.selected
		a
			border-color rosa_suave
			// background rojo_ladrillo
			opacity 1

			
