@keyframes rotador
	0%
		transform( rotate(0deg) )
	100%
		transform( rotate(180deg) )
		

.encabezado__logotipo--movil
	display block
	padding 0.2em 0 0 0.2em
	width 45px
	z-index 4
	a
		display inline-block
		img
			display block
			margin 0
			padding 0
			// transition(all 1.3s cubic-bezier(0.815, 0.610, 0.355, -1.000))
			width 100%
		&:hover
			img
				animation rotador 0.9s cubic-bezier(0.64, -0.37, 0.46, 1.55)
		
.encabezado__logotipo--tablet
	display none
		
@media only screen and (min-width: 460px)
	.encabezado__logotipo--movil
		display none
		
	.encabezado__logotipo--tablet
		display inline-block
		width 350px		
		img
			display block
			width 100%