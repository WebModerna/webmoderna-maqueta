.blog__contenedor
	padding 0.5em
	
.blog__contenedor__post
	margin-bottom 3em
	
.blog__contenedor__post--destacado
	background rgba(rosa_suave, 0.8)
	border-radius 0.5em
	color blanco
	overflow hidden

.post__header
	border-bottom 0.1px solid blanco
	overflow hidden
	
.post__header__imagen
	perspective 600px
	transform-style preserve-3d
	transition all 0.3s ease-in-out
	width 100%
	a
		display block
		margin-bottom 1em
		overflow hidden
		position relative
		transition(all 0.3s ease-in-out)
		text-decoration none
		&:after
			color blanco
			content "\e986"
			font-family 'icomoon'
			font-size 3em
			left 0
			height 100%
			opacity 0
			position absolute
			top 30%
			transition(all 0.7s ease-in-out)
			text-shadow_lindo()
			text-align center
			visibility hidden
			width 100%
			z-index 3
			

		&:before
			background rgba(rosa_suave, 0.5)
			content ""
			right 0
			height 100%
			position absolute
			top 0
			transition(all 0.3s ease-in-out)
			width 0
			z-index 2
			
		
				
		&:hover
		&:focus
			&:before
				width 100%
			&:after
				opacity 1
				visibility visible
			img
				transform( scale(1.3) unquote(" ") rotate(10deg))
		img
			border-radius 0.5em 0.5em 0 0
			display block
			transition all 0.3s ease-in-out
			width 100%


.post__header__grupo-titulos
	box-sizing()
	margin 0 0.5em 0.5em 0.5em
	float left
	width 55%

.post__header__autor
	font-family 'MankSansOblique'
	text-transform none
	font-weight lighter
	margin auto 0
	padding auto 0

.post__header__titulo
	letter-spacing -1px
	margin auto 0
	padding auto 0

.post__header__fecha
	background rosa_suave
	border-radius 50%
	color blanco
	display inline-block
	float right
	font-family 'MankSansMediumItalic'
	font-style italic
	font-size 12px
	font-weight lighter
	height 60px
	margin 0 0.5em 0.5em 0.5em
	padding 4px
	text-align center
	text-shadow_lindo()
	width 60px
	span
		display block
		font-family 'MankSansMedium'
		font-size 24px
		font-style normal
		font-weight bold
		
.post__contenido
.post__pie
	padding 0.5em

.post__pie
.post__pie__calificacion
.post__pie__comentarios
	display inline-block

.post__pie__calificacion
.post__pie__comentarios
	margin 0 1em 1em 0

		
@media all and (min-width:300px)
	.blog__contenedor__post
		margin-left auto
		margin-right auto
		max-width 300px
		
	.post__header__grupo-titulos
		box-sizing()
		max-width none
		
@media all and (min-width:760px)
	.blog__contenedor__post--destacado
	.blog__contenedor__post--grupo
		display inline-block
		vertical-align top
		
		
@media all and (min-width:960px)
	.blog__contenedor__post
		display inline-block
		max-width 350px
		margin-left 1em
	.blog__contenedor__post--destacado
		float left
		margin-left 0
		
	.blog__contenedor__post--grupo		
		display flex
		flex-flow row wrap
		justify-content space-between
		article
			align-content space-around
			align-items flex-end
		
	.post__pie
		display flex
		// flex-flow row wrap
		justify-content space-around
