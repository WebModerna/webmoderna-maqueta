.equipo__contenedor
	padding 0.5em
	
.equipo__contenedor__item
	margin-bottom 2em

.equipo__contenedor__item--imagen
	border 1px solid rgba(gris_suave, 0.5)
	border-radius 0.5em
	box-sizing()
	margin 0 auto
	perspective 600px
	overflow hidden
	text-align center
	transform-style preserve-3d
	transition all 0.3s ease-in-out
	width 100%
	a
		display block
		overflow hidden
		position relative
		transition(all 0.3s ease-in-out)
		width 100%
		text-decoration none
		&:after
			color blanco
			content "\e986"
			font-family 'icomoon'
			font-size 3em
			left 0
			height 100%
			opacity 0
			position absolute
			top 30%
			transition(all 0.3s ease-in-out 0.2s)
			text-shadow_lindo()
			text-align center
			visibility hidden
			width 0
			z-index 3

		&:before
			background rgba(gris_suave, 0.5)
			content ""
			right 0
			height 100%
			position absolute
			top 0
			transition(all 0.3s ease-in-out)
			width 0
			z-index 2
	
		&:hover
		&:focus
			&:before
				height 100%
				width 100%
			&:after
				opacity 1
				visibility visible
				width 100%
			img
				transform( scale(1.3) unquote(" ") rotate(-10deg))
		img
			border-radius 0.5em
			display block
			transition all 0.3s ease-in-out 0.2s
			width 100%

.equipo__contenedor__item--contenido
.equipo__contenedor__item--lista
.equipo__contenedor__item--subtitulo
.equipo__contenedor__item--titulo
	margin-left auto
	margin-right auto
	text-align center
	
.equipo__contenedor__item--lista
	padding 0
	li
		display inline-block
		margin 0 0.5em
		a
			color gris_suave
			display block
			font-size 2em
			padding 0.1em
			text-decoration none
			&:hover
			&:focus
				color gris_fuerte
				transform scale(1.1)
.equipo__contenedor__item--subtitulo
	color gris_suave
	margin 0
	text-transform none
	font-weight lighter
	
.equipo__contenedor__item--titulo
	margin 0.5em 0 0 0

@media all and (min-width:350px)
	.equipo__contenedor__item--imagen
		max-width 350px
		width auto
		
@media all and (min-width:760px)
	.equipo__contenedor
		display flex
		justify-content space-around
		text-align center
	
	.equipo__contenedor__item
		display inline-block
		margin 1em
		max-width 350px